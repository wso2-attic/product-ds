<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="ESTestSuite" parallel="false">
    <parameter name="useDefaultListeners" value="false"/>

    <listeners>
        <listener class-name="org.wso2.carbon.automation.engine.testlisteners.TestExecutionListener"/>
        <listener class-name="org.wso2.carbon.automation.engine.testlisteners.TestSuiteListener"/>
        <listener class-name="org.wso2.carbon.automation.engine.testlisteners.TestManagerListener"/>
        <listener class-name="org.wso2.carbon.automation.engine.testlisteners.TestReportListener"/>
        <listener class-name="org.wso2.carbon.automation.engine.testlisteners.TestTransformerListener"/>
        <listener class-name="org.wso2.carbon.integration.common.extensions.selenium.UIManagementListener"/>
    </listeners>


    <test name="UES-UI-tests" parallel="false" verbose="2" preserve-order="true">
        <!--<packages>-->
        <!--<package name="org.wso2.ues.ui.integration.test.login.*"/>-->
        <!--</packages>>-->
        <classes>
            <class name="org.wso2.ues.ui.integration.test.login.LoginAdminTest"/>
            <class name="org.wso2.ues.ui.integration.test.login.LoginPortalTest"/>
            <class name="org.wso2.ues.ui.integration.test.common.AddUserTest"/>
            <class name="org.wso2.ues.ui.integration.test.dashboard.AddDeleteDashboardTest"/>
        </classes>

    </test>


</suite>
