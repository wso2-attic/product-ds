{{#if popularAssets}}
<div id="asset-slideshow-cont">
	<div class="html_carousel">
		<div id="asset-slideshow">
			{{#each popularAssets}}
			<div class="slide">
				{{#attributes}}
				<div class="asset-banner">
					<img src="{{images_banner}}">
				</div>
				<div class="asset-intro-box">
					<img src="{{images_thumbnail}}">
					<h3><span>{{overview_name}}</span> 
						<small>{{overview_version}}</small>			
					</h3>
					
					{{/attributes}}
					<br>
					<span class="star-rating">
						<div class="asset-rating">
							<div class="asset-rating-{{rating.average}}star">

							</div>
						</div> 
						<small> by {{attributes.overview_provider}} </small>
					</span>

					<a data-type="gadget" class="btn btn-primary" id="btn-add-gadget" href="{{url "/asset"}}/{{type}}?asset={{path}}">View</a>

				</div>

			</div>
			{{/each}}

		</div>
		<div class="clearfix"></div>
		<a class="prev" id="asset-slideshow-prev" href="#"><span>prev</span></a>
		<a class="next" id="asset-slideshow-next" href="#"><span>next</span></a>
		<div class="pagination" id="asset-slideshow-pag"></div>

	</div>
</div>
<div id="slideshow-clearfix"></div>
{{/if}}
	
{{#itr recentAssets}}
<div class="assets-container">
    <h3 class="asset-title-separator asset-type-{{key}}"><span>{{#if ../recent}}Recent {{/if}}{{cap key}}s</span><div class="pagination top-asset-slideshow-pag" id="top-asset-slideshow-pag-{{key}}"></div></h3>

	<div class="top-asset-slideshow-cont">
		<div class="html_carousel">
			<div id="top-asset-slideshow-{{key}}">
                {{#if value}}
				{{#each value}}
				{{#attributes}}
				<div class="slide asset" data-path="{{../path}}" data-type="{{../type}}">
					<a href="#">
					<div class="asset-icon">
						{{#if ../indashboard}}
							<i class="icon-bookmark store-bookmark-icon"></i>
						{{/if}}
						<a href="{{url "/asset"}}/{{../type}}?asset={{../path}}"><img src="{{#if images_thumbnail}}{{images_thumbnail}}{{/if}}"></a>
					</div> </a>

					<div class="asset-details">
						<div class="asset-name">
							<a href="{{url "/asset"}}/{{../type}}?asset={{../path}}"> <h4>{{overview_name}}</h4> </a>
						</div>
						<div class="asset-rating">
							<div class="asset-rating-{{../rating/average}}star">

							</div>
						</div>
						<div class="asset-author-category">
							<ul>
								<li>
									<h4>{{t "Category"}}</h4>
									<a class="asset-category" href="#">{{cap ../type}}</a>
								</li>
								<li>
									<h4>{{t "Author"}}</h4>
									<a class="asset-author" href="#">{{overview_provider}}</a>
								</li>

							</ul>

							{{#if ../indashboard}}
							<a href="#" class="btn disabled btn-added">{{t "Bookmarked"}}</a>
							{{else}}
							
							{{# if ../../../../../sso}}					
							<a href="{{url "/login.jag"}}"  class="btn btn-primary asset-add-btn">{{>process-asset-text}} {{../../type}} </a>
							{{else}}
							
							<a href="#" class="btn btn-primary asset-add-btn">{{>process-asset-text}} {{../../type}} </a>
							{{/if}}
							{{# if ../../../../../user.username}}		
							<a href="#" class="btn btn-primary asset-add-btn">{{>process-asset-text}} {{../../type}} </a>
							{{/if}}{{/if}}

						</div>
					</div>
				</div>
				{{/attributes}}
				{{/each}}
                {{else}}
                    <div class="top-assets-empty-assert">{{t "We couldn't find anything for you."}}</div>
                {{/if}}
			</div>
			<div class="clearfix"></div>

		</div>

	</div>
</div>
{{/itr}}

