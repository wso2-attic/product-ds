            <version>${carbon.uuf.version}</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.uuf</groupId>
            <artifactId>org.wso2.carbon.uuf.renderablecreator.html.feature</artifactId>
            <version>${carbon.uuf.version}</version>
            <type>zip</type>
