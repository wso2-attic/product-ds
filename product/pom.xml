        <!-- Sample apps -->
        <dependency>
            <groupId>org.wso2.carbon.uuf.sample</groupId>
            <artifactId>org.wso2.carbon.uuf.sample.pets-store.feature</artifactId>
            <version>${carbon.uuf.version}</version>
            <type>zip</type>
